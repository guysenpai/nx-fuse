{
  "printWidth": 120,
  "singleQuote": true,
  "jsxSingleQuote": true,
  "arrowParens": "avoid",
  "trailingComma": "none",
  "overrides": [
    {
      "files": "*.html",
      "options": {
        "tabWidth": 4
      }
    },
    {
      "files": ["*.css", "*.scss", "*.yml", "*.yaml"],
      "options": {
        "singleQuote": false
      }
    }
  ]
}
