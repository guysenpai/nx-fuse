{
  "name": "fuse-tailwind",
  "$schema": "../../node_modules/nx/schemas/project-schema.json",
  "sourceRoot": "packages/fuse-tailwind/src",
  "projectType": "library",
  "targets": {
    "build": {
      "executor": "@nrwl/esbuild:esbuild",
      "outputs": ["{options.outputPath}"],
      "options": {
        "outputPath": "dist/packages/fuse-tailwind",
        "main": "packages/fuse-tailwind/src/index.ts",
        "tsConfig": "packages/fuse-tailwind/tsconfig.lib.json",
        "assets": ["packages/fuse-tailwind/*.md"]
      }
    },
    "publish": {
      "executor": "nx:run-commands",
      "options": {
        "command": "node tools/scripts/publish.mjs fuse-tailwind {args.ver} {args.tag}"
      },
      "dependsOn": ["build"]
    },
    "lint": {
      "executor": "@nrwl/linter:eslint",
      "outputs": ["{options.outputFile}"],
      "options": {
        "lintFilePatterns": ["packages/fuse-tailwind/**/*.ts"]
      }
    },
    "test": {
      "executor": "@nrwl/jest:jest",
      "outputs": ["{workspaceRoot}/coverage/{projectRoot}"],
      "options": {
        "jestConfig": "packages/fuse-tailwind/jest.config.ts",
        "passWithNoTests": true
      }
    }
  },
  "tags": ["platform:frontend", "scope:fuse", "type:util"]
}
